					completeFc   : "addGridRow(15, '"+gridName+"', 'datarow');",
					dblClickRowFc : "celldbClickAction(rowId,iRow,iCol,e);"
				}]
			};
			commonJqGridInit(gridParam);

			if($("#hid_cond").val() != ""){
				setTimeout('doSearch();',50);
			}
