		function retrieve(btnFlag){
			switch(btnFlag){
			   case "search" :
				   	doSearch();
					break;
			   case "new" :
				   doNew();
				   break;
			   case "excel" :
				    doExcel();
					break;
			}
		}

		function fnParamJson(){
			var paramVo = {
				eeno 		: $("#key_eeno").val(),
				eenm 		: $("#key_eenm").val(),
				strt_ymd 	: trimChar($("#key_strt_ymd").val(), "-"),
				fnh_ymd 	: trimChar($("#key_fnh_ymd").val(), "-"),
				dept_nm 	: $("#key_dept_nm").val(),
				car_no 		: $("#key_car_no").val(),
				pgs_st_cd	: $("#key_pgs_st_cd").val(),
				corp_cd		: sess_corp_cd,
				locale		: sess_locale
			};
			return paramVo;
		}

		function doNew(){
			var form = $("<form/>");
		    form.attr("method" , "post");
		    form.attr("id"     , "submitForm").attr("name", "submitForm");
		    form.attr("action" , "xvl01.gas");
		    var token = $("<input type='hidden' id='hid_csrfToken' name='hid_csrfToken'/>").val($("#csrfToken").val());
		    form.append(token);
		    $("body").append(form);
		    form.submit();
		    form.remove();
		}

		function doSearch(){
			doCommonSearch("doSearchXvl02InfoList.do", util.jsonToString(fnParamJson()), "loadCallBack();", gridName, "N");
		}

		function loadCallBack(){
			$("#hid_page").val($("#page_htmlPager").val());
			addGridRow();
		}

		function celldbClickAction(rowId,iRow,iCol,e){
			if(getColValue("doc_no",rowId, gridName) != ""){
		        var form = $("<form/>");
		        form.attr("method" , "post");
		        form.attr("id"     , "hideForm");
		        form.attr("action" , "xvl01.gas");
		        var inp1 = $("<input type='hidden' id='M_DOC_NO' name='M_DOC_NO'/>").val(getColValue("doc_no",rowId, gridName));
		        var inp2 = $("<input type='hidden' id='hid_eeno' name='hid_eeno'/>").val(getColValue("eeno",rowId, gridName));
		        var inp3 = $("<input type='hidden' id='hid_view_nm' name='hid_view_nm'/>").val($("#menu_id").val());
		        var cond = "";
		        cond += $("#key_eeno").val();
		        cond += "|" + $("#key_eenm").val();
		        cond += "|" + $("#key_strt_ymd").val();
		        cond += "|" + $("#key_fnh_ymd").val();
		        cond += "|" + $("#key_pgs_st_cd").val();
		        cond += "|" + $("#page_htmlPager").val();

		        var inp4 = $("<input type='hidden' id='hid_cond' name='hid_cond'/>").val(cond);
		        var token = $("<input type='hidden' id='hid_csrfToken' name='hid_csrfToken'/>").val($("#csrfToken").val());
		        form.append(inp1, inp2, inp3, inp4, token);
		        $("body").append(form);
		        form.submit();
		        form.remove();
			}
		}


		function setInsaInfo(){
			if($("#key_eeno").val() != ""){
				var keyData = {
						xusr_empno : $("#key_eeno").val(),
						corp_cd		: sess_corp_cd
				};
				paramData = {
					paramJson : util.jsonToString(keyData)
				};
				doCommonAjax("/doSearchToUserInfo.do", paramData, "insaCallBack(jsonData.sendResult)");
			}
		}

		function insaCallBack(result){
			setBottomMsg(result.message, false);
			$("#key_eeno").val(result.xusr_empno);
			$("#key_eenm").val(result.xusr_name);
		}

		function clearInsa(){
			if($("#key_eeno").val() == ""){
				$("#key_eenm").val("");
			}
		}

		function pageStepHelpPopup(){
			if(popup != null ){
				popup.close();
			}

			popup = popUpWindow3($("#help_url").val());
		}
		
		function doExcel(){
			var keyData = {
					eeno 		: $("#key_eeno").val(),
					eenm 		: $("#key_eenm").val(),
					strt_ymd 	: trimChar($("#key_strt_ymd").val(), "-"),
					fnh_ymd 	: trimChar($("#key_fnh_ymd").val(), "-"),
					dept_nm 	: $("#key_dept_nm").val(),
					car_no 		: $("#key_car_no").val(),
					pgs_st_cd	: $("#key_pgs_st_cd").val(),
					corp_cd		: sess_corp_cd,
					locale		: sess_locale
			};

			var params = [
				{name : "fileName",		value : "VehicleLog_service_confirm" },
				{name : "header",		value : util.jsonToArray(excelCn)},
				{name : "headerName",	value : util.jsonToArray(excelCm)},
				{name : "fomatter",		value : util.jsonToArray(excelFm)},
				{name : "paramJson",	value : util.jsonToString(keyData)},
				{name : "firstUseYn",	value : "Y"}
			];

			gridToExcel("#"+gridName, "doExcelVehicleLogList.excel", params);
		}
