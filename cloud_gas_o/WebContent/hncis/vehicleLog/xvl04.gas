			var params = {
					eeno 		: $("#key_eeno").val(),
					eenm 		: $("#key_eenm").val(),
					strt_ymd 	: trimChar($("#key_strt_ymd").val(), "-"),
					fnh_ymd 	: trimChar($("#key_fnh_ymd").val(), "-"),
					dept_nm 	: $("#key_dept_nm").val(),
