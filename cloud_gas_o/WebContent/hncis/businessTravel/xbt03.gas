		function retrieve(gubn){
			switch(gubn){
				case "search" :
					doSearch();
					break;
				case "check" :
					doCheck();
					break;
				case "checkCancel" :
					doCheckCancel();
					break;
				case "excel" :
					doExcel();
					break;
			}
		}

		function doSearch(msgFlag){
			if(selectNum($("#key_from_date").val()) > selectNum($("#key_to_date").val())){
				alertUI('<fmt:message key="MSG.ETC.0001"/>');
				$("#key_to_date").focus();
				return;
			}
			
			var params = {
				eeno       	: $("#key_eeno").val(),
				ee_nm       : $("#key_ee_nm").val(),
				strt_ymd   	: trimChar($("#key_from_date").val(), "-"),
				fnh_ymd    	: trimChar($("#key_to_date").val(), "-"),
				ops_cd     	: $("#key_ops_cd").val(),
				pgs_st_cd  	: $("#key_pgs_st_cd").val(),
				plac_work   : $("#key_plac_work").val(),
				ipe_eeno    : $("#key_eeno").val(),
				corp_cd		: sess_corp_cd,
				locale		: $("#lo").val(),
				key_gubun   : $("#key_gubun").val()
			};

			doCommonSearch("doSearchBTToList.do", util.jsonToString(params), "loadCallBack();initAfterMenus();", gridName1, msgFlag);
		}

