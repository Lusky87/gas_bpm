				corp_cd		: sess_corp_cd,
				locale		: $("#lo").val(),
				key_gubun   : $("#key_gubun").val()
			};

			gridParam = {
				viewEdit : [{
					gridName     : gridName1,
					url          : "doSearchBTToList.do",
					colNames     : cn,
					colModel     : cm,
					height       : "100%",
					sortname     : "eeno",
					sortorder    : "asc",
