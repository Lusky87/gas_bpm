		<echo message="DPackaging ${app.name}'s web archive file ..." />
		<delete file="${basedir}/deploy/${app.name}.war" />
		<jar jarfile="${basedir}/deploy/${app.name}.war">
			<fileset dir="${basedir}/deploy/WebContent" includes="**" />
