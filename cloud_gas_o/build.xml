			<copy file="${basedir}/backup/quartzContext.xml.real" 
				tofile="${basedir}/deploy/WebContent/WEB-INF/classes/com/hncis/config/quartzContext.xml" overwrite="yes"/>
		</target>
	
	<!-- app.name으로  war 파일을 생성한다. -->
