@charset "utf-8";
/* CSS Document */
html, body, div#wrap, div#GASC, div#navi, div#container_wrap, div#container{height:100%;}
#logo{height:96px; border-top:2px solid #0a2366; text-align:center;}
#logo img{padding-top:12px;}
#main_container{height:100%; width:1010px; margin-left:188px; overflow:hidden;}
#main_contents{height:100%; width:710px; background:url('/images/main/main_contents_bg.gif') left top repeat-y; float:left;}
#main_aside{height:100%; width:240px; padding:0 28px; *padding:0 29px; float:right;}
.often_ban{margin:15px 19px 0 27px; *margin:1px 10px 0 27px;}
.often_ban li{float:left; margin-right:9px; margin-top:9px;}
#main_footer{clear:both; font-size:10px; color:#b1b1b1; padding-top:30px; *padding-top:10px; padding-bottom:20px; margin-left:27px;}
#main_aside .main_top{margin-left:0px; *margin-left:0px; *width:240px; margin-top:30px; clear:both;}
#main_aside .main_top li{float:right; padding-left:8px; padding-right:8px; font-size:11px; background:url('../images/main/top_line.gif') left 5px no-repeat;}
#main_aside .main_top li a{font-size:11px;}
#main_aside .main_top li.topF{background:none;}
#main_aside .main_top li.main_topL{padding-right:0;}
#main_aside .main_top li a:link, #header .header_info td a:visited{color:#a1a1a1;}
#main_aside .main_top li a:hover, #header .header_info td a:active{color:#0a2267;}
#main_aside .main_emp{clear:left; padding-top:10px; padding-bottom:10px; border-bottom:1px solid #e7e7e7;}
#main_aside .main_emp ul{border-top:1px solid #e7e7e7; border-left:1px solid #e7e7e7;}
#main_aside .main_emp ul li{border-bottom:1px solid #e7e7e7; border-right:1px solid #e7e7e7; text-align:center; height:17px; padding-top:3px;}
#main_aside .main_emp .dInfo{background-color:#fafafa;}
#main_aside .main_emp .eInfo span{color:#2b69a2;}
#main_aside .main_notice{padding-top:10px; padding-bottom:10px; border-bottom:1px solid #e7e7e7;}
#main_aside .main_notice span.nMore{padding-left:150px; padding-right:14px; background:url('/images/main/main_plus.gif') right center no-repeat;}
#main_aside .main_notice dd{padding-top:10px;}
#main_aside .main_notice dd li{padding-top:2px; padding-bottom:2px; color:#959595; border-bottom:1px dotted #e7e7e7;}
#main_aside .main_calendar{padding-top:10px; padding-bottom:10px; border-bottom:1px solid #e7e7e7;}
#main_aside .main_calendar dd{padding-top:10px;}
#main_aside .main_calendar dd li span.dChoice{padding-left:40px;}
#main_aside .main_calendar dd li span.dChoice select{width:40px; padding:2px;}
#main_aside .main_calendar dd li span.dChoice select.year{width:70px;}
#main_aside .main_calendar dd li span.dChoice select.month{width:55px;}
#main_aside .main_calendar dd li span.next{padding-left:40px;}
#main_aside .main_calendar dd li.calendar_form{padding-top:10px;}
#main_aside .calendar_form table{border:0;}
#main_aside .calendar_form table td{width:30px; height:20px; text-align:center; color:#3f3f41;}
#main_aside .calendar_form table td.sunday{color:#ff0000;}
#main_aside .calendar_form table td.saturday{color:#0066ca;}
#main_aside .calendar_form .tableline{background-color: #a7c4e4}
#main_aside .main_whether{padding-top:10px; padding-bottom:10px; border-bottom:1px solid #e7e7e7;}
#main_aside .main_whether dd{padding-top:10px;}
#main_aside .main_whether dd span.cityN{padding-left:0px;font-weight:bold; color:#000;}
#main_aside .main_whether dd .city_select{padding-left:20px; color:#000;}
#main_aside .main_whether dd span select{width:120px; padding:2px;}
#main_aside .main_whether dd li.city_whether{padding-top:10px;}
#main_aside .main_whether dd li.city_whether ul.wUl{width:238px; height:64px; background:url('/images/main/whether_bg.gif') top left no-repeat;}
#main_aside .main_whether dd li.city_whether li.wliW{float:left; padding-top:12px; padding-left:22px;}
#main_aside .main_whether dd li.city_whether li.wli{float:left; padding-left:35px; padding-top:8px; *padding-top:10px;}
#main_aside .main_whether dd li.city_whether li .degree li{height:24px; padding-top:4px;}
#main_aside .main_whether dd li.city_whether li .degree span{color:#000;}
#main_aside .main_whether dd li.city_whether li .degree span sup{color:#000;}
#main_aside .main_whether dd li.city_whether li .degree span.dNow{padding-left:50px; color:#F00; font-size:14px;}
#main_aside .main_whether dd li.city_whether li .degree span.dHigh{padding-left:43px; color:#F00; font-size:14px;}
#main_aside .main_pBan{clear:left; padding-top:10px; padding-bottom:10px;}
table{border-collapse:collapse;}
#main_aside .main_timeDifference{padding-top:10px; padding-bottom:10px; border-bottom:1px solid #e7e7e7;}
#main_aside .main_timeDifference dd{padding-top:10px;}
#main_aside .main_timeDifference table{border-top:1px solid #e7e7e7; border-left:1px solid #e7e7e7;}
#main_aside .main_timeDifference td{border-bottom:1px solid #e7e7e7; border-right:1px solid #e7e7e7; text-align:center; height:21px; padding-top:3px; padding-bottom:3px;}
#main_aside .main_timeDifference .timeDT{background-color:#fafafa; width:78px;}
#main_aside .main_timeDifference .timeDC{color:#000;font-size:8pt}
#main_aside .main_timeDifference .timeDC select{width:70px; padding:2px;}