		paramData = {
			paramJson : util.jsonToString(params)
		};
	
		doCommonAjax("/changeLocale.do", paramData, "fn_changeLocCallBack(jsonData.sendResult)");
		
	}
	
	function fn_changeLocCallBack(rtn){
